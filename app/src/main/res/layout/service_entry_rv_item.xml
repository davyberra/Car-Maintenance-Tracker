<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/gas_entry_overview_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/yellow_500"
    android:id="@+id/service_entry_card_view">

    <TextView
        android:id="@+id/serviceEntryDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:text="TextView"
        android:textColor="@color/brand_dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/serviceEntryCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:text="TextView"
        android:textColor="@color/brand_dark_grey"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/serviceEntryCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="TextView"
            android:textColor="@color/brand_dark_grey"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/serviceEntryDescriptionText"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/serviceEntryDescriptionText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:text="TextView"
            android:textColor="@color/brand_dark_grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/serviceEntryDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:text="Service:"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/serviceEntryCostText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/serviceEntryCostLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="Total Cost:"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/serviceEntryDescriptionLabel"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>