<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.carmaintenancetracker.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_add_Vehicle_Fragment"
            app:destination="@id/add_Vehicle_Fragment2" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.carmaintenancetracker.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/add_Vehicle_Fragment2"
        android:name="com.example.carmaintenancetracker.Add_Vehicle_Fragment"
        android:label="Add_Vehicle_Fragment"
        tools:layout="@layout/fragment_add_vehicle"/>
</navigation>